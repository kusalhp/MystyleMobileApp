<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.test2.ProductDetails"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:textColor="#CC0033"
        android:layout_x="10dp"
        android:layout_y="35dp"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_x="69dp"
        android:layout_y="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView5"
        android:layout_x="0dp"
        android:layout_y="250dp"
        android:textColor="#CC0033"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView3"
        android:layout_x="75dp"
        android:layout_y="250dp"
        android:textSize="13sp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/ratingBar"
        android:layout_x="55dp"
        android:layout_y="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings"
        android:textColor="#CC0033"
        android:id="@+id/textView4"
        android:layout_x="0dp"
        android:layout_y="320dp"
        android:numStars="5"
        android:stepSize="0.1"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_x="648dp"
        android:layout_y="309dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Comments"
        android:id="@+id/button2"
        android:layout_x="5dp"
        android:layout_y="381dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Quotation"
        android:id="@+id/button3"
        android:layout_x="145dp"
        android:layout_y="381dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product Information"
        android:id="@+id/textView6"
        android:layout_x="10dp"
        android:layout_y="0dp"
        android:textSize="20dp"/>


</AbsoluteLayout>
